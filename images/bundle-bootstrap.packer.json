{
    "variables": {
        "source_image": "unknown",
        "image_name": "unknown",
        "factory_floating_ip_pool": "6ea98324-0f14-49f6-97c0-885d1b8dc517",
        "factory_network": "{{ env `FACTORY_NETWORK` }}",
        "factory_security_group": "{{ env `FACTORY_SECURITY_GROUP` }}"
    },
    "builders": [
        {
            "type": "openstack",
            "ssh_username": "cloud",
            "flavor": "16",
            "image_name": "{{ user `image_name` }}",
            "source_image": "{{ user `source_image` }}",
            "security_groups": "{{ user `factory_security_group` }}",
            "networks": "{{ user `factory_network` }}",
            "floating_ip_pool": "{{ user `factory_floating_ip_pool` }}",
            "use_floating_ip": "true"
        }
    ],
    "provisioners": [
        {
            "type": "ansible-local",
            "playbook_dir": "ansible",
            "playbook_file": "ansible/bootstrap.yml",
            "inventory_file": "ansible/inventory"
        },
        {
            "type": "shell",
            "inline": [ "sudo sync" ]
        }
    ]
}
